@model IEnumerable<CustomerApp.ViewModels.ClientVM>

@{
    ViewBag.Title = "Customers List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count() > 0)
{
    <h2>Clients list</h2>
}
    <p>
        <a href="/Home/ManageClient/0" target="_blank">Create New</a>
    </p>
    @if (Model.Count() == 0)
    {
        <h2>No records found</h2>

    }
    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Email")
                </th>
                <th>
                    @Html.DisplayName("UID")
                </th>
                <th>
                    @Html.DisplayName("Phone")
                </th>
                <th>
                    @Html.DisplayName("Expiry Date")
                </th>
                <th></th>
            </tr>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.Raw(item.ExpiryDate.ToString("MM/dd/yyyy"))
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "ManageClient", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }


        </table>
    }
